# Настройки сервера

NODE_ENV=development
IP=
PORT=5000
PREFIX=
ROOT_PATH=./

# Настройки загрузки

UPLOADS_PATH=./public/uploads
UPLOADS_URL=/uploads
UPLOADS_ALLOW_TYPES=
UPLOADS_MAX_SIZE=1048576
UPLOADS_IMAGE_MAX_WIDTH=3840
UPLOADS_IMAGE_MAX_HEIGHT=2160

# Настройки документации

SWAGGER_PREFIX=/swagger
SWAGGER_PREFIX_REDOC=/redoc
SWAGGER_TITLE=Nest API
SWAGGER_DESCRIPTION=Nest API documentation
SWAGGER_VERSION=1.0

# Настройки сессии

SESSION_SECRET=custom_secret_word_for_session
SESSION_EXPIRES=2592000

# Ключ шифрования
# ! длина 32 символа

AES_SECRET=custom_32_random_letters_and_num

# Настройки шифрования скрытых методов

HIDDEN_SECRET=custom_secret_string_for_hidden_methods
HIDDEN_METHOD=
HIDDEN_EXPIRES=3600
HIDDEN_SIMPLE=custom_string_for_simple_security

# Настройки токенов

JWT_SECRET=custom_secret_word_for_token
JWT_ACCESS_EXPIRES=15m
JWT_REFRESH_EXPIRES=30d
JWT_CLIENTS_EXPIRES=
JWT_EXPIRES=true

# Настройки MySql
DB_TYPE=mysql
DB_HOST=localhost
DB_NAME=database
DB_SCHEMA=
DB_USER=root
DB_PASSWORD=1234
DB_PORT=3306
DB_QUOTES=`

# Настройки Postgres
# DB_TYPE=postgres
# DB_HOST=localhost
# DB_NAME=postgres
# DB_SCHEMA=public
# DB_USER=postgres
# DB_PASSWORD=secret
# DB_PORT=5432
# DB_QUOTES='"'

# Автоматическая синхронизация базы данных со схемой
# ! Рекомендуем отключать в production

DB_SYNCHRONIZE=
DB_LOG=

# Настройки GraphQl

GQL_ENABLE=
GQL_PLAYGROUND=

# Настройки почты

SMTP_HOST=smtp.domain.ru
SMTP_PORT=465
SMTP_USER=mail@domain.ru
SMTP_PASSWORD=password_to_mail
SMTP_SECURE=1
SMTP_SENDER_NAME=test
SMTP_SENDER_EMAIL=test@mail.ru

# Настройки ссылок для форм авторизации

FORM_LOGIN=http://localhost:5000/auth/forms/login
FORM_CHANGE=http://localhost:5000/auth/forms/change
FORM_CHANGE_COMPLETE=http://localhost:5000/auth/forms/change_complete
FORM_CONFIRM=http://localhost:5000/auth/forms/confirm
FORM_CONFIRM_COMPLETE=http://localhost:5000/auth/forms/confirm_complete
FORM_REGISTER=http://localhost:5000/auth/forms/register
FORM_REGISTER_COMPLETE=http://localhost:5000/auth/forms/register_complete
FORM_RESET=http://localhost:5000/auth/forms/restore
FORM_RESET_COMPLETE=http://localhost:5000/auth/forms/restore_complete

# Настройки стратегий авторизации

OAUTH_SERVER=http://localhost:5000
OAUTH_CLIENT_ID=oauth_client_id
OAUTH_CLIENT_SECRET=oauth_client_secret
OAUTH_CLIENT_REDIRECT=https://localhost:5000/auth/strategies/oauth/redirect

GOOGLE_CLIENT_ID=google_client_id
GOOGLE_CLIENT_SECRET=google_client_secret
GOOGLE_CLIENT_REDIRECT=http://localhost:5000/auth/strategies/google/redirect

LEADER_CLIENT_ID=leaderid_client_id
LEADER_CLIENT_SECRET=leaderid_client_secret
LEADER_CLIENT_REDIRECT=http://localhost:5000/auth/strategies/leader/redirect

UNTI_CLIENT_URL=unti_client_url
UNTI_CLIENT_ID=unti_client_id
UNTI_CLIENT_SECRET=unti_client_secret
UNTI_CLIENT_REDIRECT=http://localhost:5000/auth/strategies/unti/redirect
